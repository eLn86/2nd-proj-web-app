extends base/indexLayout

block main
  .container
    .row
      .col-sm-8.col-sm-offset-2
        h1
          span.fa.fa-sign-in Signup
    .row
      .col-sm-8.col-sm-offset-2
        
        // SIGNUP FORM
        form(action='/signup', method='post')
          .form-group
            label First Name
            input.form-control(type='text', name='firstName')
          .form-group
            label Last Name
            input.form-control(type='text', name='lastName')
          .form-group
            label Email
            input.form-control(type='text', name='email')
          .form-group
            label Password
            input.form-control(type='password', name='password')
          button.btn.btn-info.btn-lg(type='submit') Signup
        hr
