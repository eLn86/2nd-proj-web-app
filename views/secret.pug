extends base/layout

block content
        
    .jumbotron
      h1.text-center(style='border: 2px solid black;padding: 10px') Welcome !{name}!
      .row
         if tracks[0] === 'not enrolled'
           .col-xs-12.col-sm-12.col-md-12.col-lg-12
            h2(style='text-align:center;font-family: Georgia') You are currently not enrolled in any tracks!
            p(style='text-align:center')
              | Click 
              a(href='/secret/tracks') Here
              |  to enrol!
         else 
           
              .row
                each val, index in tracks
                  .col-xs-6.col-sm-6.col-md-4.col-lg-4(style='padding:20px; border: 1px solid grey')
                    .row
                      .col-xs-12.col-sm-12.col-md-12.col-lg-12
                        h3(style='text-align:center')=val
                    .row
                        if val === 'Chest X-Ray Essentials Track'
                          .col-xs-12.col-sm-12.col-md-12.col-lg-12
                            img.center-block(src='images/essentialsDoctor.jpg' style='width:70px;height:100px;margin-bottom:40px')
                          .row
                            .col-xs-5.col-xs-offset-1.col-sm-5.col-sm-offset-1.col-md-5.col-md-offset-1.col-lg-5.col-lg-offset-1
                              if node[0] === 0
                                button.btn.btn-sm.btn-block.btn-success(type='button')
                                  a(href='/secret/lessons/essentialsLesson', style='all: unset') Start Learning
                              else
                                button.btn.btn-sm.btn-block.btn-success(type='button')
                                  a(href='/secret/lessons/essentialsLesson', style='all: unset') Resume Learning
                            .col-xs-5.col-sm-5.col-md-5.col-lg-5    
                              button.btn.btn-sm.btn-block.btn-primary(type='button')
                                a(href='/secret/lessons/essentialsTest', style='all: unset') Take Test
                          .row
                            .form-group
                              .col-xs-12.col-sm-12.col-md-12.col-lg-12(style='text-align:center; margin-top: 20px')
                                button.btn.btn-danger.btn-md(type='button', data-toggle='modal', data-target='#deleteEssentialsModal')
                                  | Disenroll
                                #deleteEssentialsModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='gridSystemModalLabel')
                                  .modal-dialog(role='document')
                                    .modal-content
                                     .modal-header
                                       button.close(type='button', data-dismiss='modal', aria-label='Close')
                                         span(aria-hidden='true') ×
                                       h4#gridSystemModalLabel.modal-title Disenroll Track
                                     .modal-body
                                       | Are you sure that you want disenroll from Chest X-Ray Essentials track?
                                     .modal-footer
                                       button.btn.btn-default(type='button', data-dismiss='modal') No
                                       a(href='/secret/tracks/deleteEssentialsTrack')
                                           button.btn.btn-primary(type='button') Yes
                                    // /.modal-content
                                  // /.modal-dialog
                                // /.modal  
                        if val === 'Emergency CT Track'
                          .col-xs-12.col-sm-12.col-md-12.col-lg-12
                            img.center-block(src='images/emergencyDoctor.jpg' style='width:70px;height:100px;margin-bottom:40px')
                          .row
                            .col-xs-5.col-xs-offset-1.col-sm-5.col-sm-offset-1.col-md-5.col-md-offset-1.col-lg-5.col-lg-offset-1
                              if node[1] === 0
                                button.btn.btn-sm.btn-block.btn-success(type='button')
                                  a(href='/secret/lessons/emergencyLesson', style='all: unset') Start Learning
                              else 
                                button.btn.btn-sm.btn-block.btn-success(type='button')
                                  a(href='/secret/lessons/emergencyLesson', style='all: unset') Resume Learning
                            .col-xs-5.col-sm-5.col-md-5.col-lg-5
                              button.btn.btn-sm.btn-block.btn-primary(type='button')
                                a(href='/secret/lessons/emergencyLesson', style='all: unset') Take Test
                          .row
                            .form-group
                              .col-xs-12.col-sm-12.col-md-12.col-lg-12(style='text-align:center; margin-top: 20px')
                                button.btn.btn-danger.btn-md(type='button', data-toggle='modal', data-target='#deleteEmergencyModal')
                                  | Disenroll
                                #deleteEmergencyModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='gridSystemModalLabel')
                                  .modal-dialog(role='document')
                                    .modal-content
                                     .modal-header
                                       button.close(type='button', data-dismiss='modal', aria-label='Close')
                                         span(aria-hidden='true') ×
                                       h4#gridSystemModalLabel.modal-title Disenroll Track
                                     .modal-body
                                       | Are you sure that you want disenroll from Emergency CT track?
                                     .modal-footer
                                       button.btn.btn-default(type='button', data-dismiss='modal') No
                                       a(href='/secret/tracks/deleteEmergencyTrack')
                                           button.btn.btn-primary(type='button') Yes
                                    // /.modal-content
                                  // /.modal-dialog
                                // /.modal  
                        if val === 'Neuro MRI Essentials Track'
                          .col-xs-12.col-sm-12.col-md-12.col-lg-12
                            img.center-block(src='images/neuroDoctor.jpg' style='width:70px;height:100px;margin-bottom:40px')
                          .row
                            .col-xs-5.col-xs-offset-1.col-sm-5.col-sm-offset-1.col-md-5.col-md-offset-1.col-lg-5.col-lg-offset-1
                              if node[2] === 0
                                button.btn.btn-sm.btn-block.btn-success(type='button')
                                  a(href='/secret/lessons/neuroLesson', style='all: unset') Start Learning
                              else
                                button.btn.btn-sm.btn-block.btn-success(type='button')
                                  a(href='/secret/lessons/neuroLesson', style='all: unset') Resume Learning
                            .col-xs-5.col-sm-5.col-md-5.col-lg-5
                              button.btn.btn-sm.btn-block.btn-primary(type='button')
                                a(href='/secret/lessons/neuroLesson', style='all: unset') Take Test
                          .row
                            .form-group
                              .col-xs-12.col-sm-12.col-md-12.col-lg-12(style='text-align:center; margin-top: 20px')
                                button.btn.btn-danger.btn-md(type='button', data-toggle='modal', data-target='#deleteNeuroModal')
                                  | Disenroll
                                #deleteNeuroModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='gridSystemModalLabel')
                                  .modal-dialog(role='document')
                                    .modal-content
                                     .modal-header
                                       button.close(type='button', data-dismiss='modal', aria-label='Close')
                                         span(aria-hidden='true') ×
                                       h4#gridSystemModalLabel.modal-title Disenroll Track
                                     .modal-body
                                       | Are you sure that you want disenroll from Neuro MRI Essentials track?
                                     .modal-footer
                                       button.btn.btn-default(type='button', data-dismiss='modal') No
                                       a(href='/secret/tracks/deleteNeuroTrack')
                                           button.btn.btn-primary(type='button') Yes
                                    // /.modal-content
                                  // /.modal-dialog
                                // /.modal  
