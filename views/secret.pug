extends base/layout

block content
        
    .jumbotron
      h1.text-center(style='border: 2px solid black;padding: 10px') Welcome !{name}!
      .row
         if tracks[0] === 'not enrolled'
           .col-xs-12.col-sm-12.col-md-12.col-lg-12
            h2(style='text-align:center;font-family: Georgia') You are currently not enrolled in any tracks!
            p(style='text-align:center')
              | Click 
              a(href='/secret/tracks') Here
              |  to enrol!
         else 
           
              .row
                each val, index in tracks
                  .col-xs-6.col-sm-6.col-md-4.col-lg-4(style='padding:20px')
                    .row
                      .col-xs-12.col-sm-12.col-md-12.col-lg-12
                        h3(style='text-align:center')=val
                    .row
                        if val === 'Chest X-Ray Essentials Track'
                          .col-xs-12.col-sm-12.col-md-12.col-lg-12
                            img.center-block(src='images/essentialsDoctor.jpg' style='width:70px;height:100px;margin-bottom:40px')
                          .row
                            .col-xs-5.col-xs-offset-1.col-sm-5.col-sm-offset-1.col-md-5.col-md-offset-1.col-lg-5.col-lg-offset-1
                              button.btn.btn-sm.btn-block.btn-success(type='button')
                                a(href='/secret/lessons/essentialsLesson', style='all: unset') Resume Learning
                            .col-xs-5.col-sm-5.col-md-5.col-lg-5    
                              button.btn.btn-sm.btn-block.btn-primary(type='button')
                                a(href='/secret/lessons/essentialsTest', style='all: unset') Take Test
                        if val === 'Emergency CT Track'
                          .col-xs-12.col-sm-12.col-md-12.col-lg-12
                            img.center-block(src='images/emergencyDoctor.jpg' style='width:70px;height:100px;margin-bottom:40px')
                          .row
                            .col-xs-5.col-xs-offset-1.col-sm-5.col-sm-offset-1.col-md-5.col-md-offset-1.col-lg-5.col-lg-offset-1
                              button.btn.btn-sm.btn-block.btn-success(type='button')
                                a(href='/secret/lessons/emergencyLesson', style='all: unset') Resume Learning
                            .col-xs-5.col-sm-5.col-md-5.col-lg-5
                              button.btn.btn-sm.btn-block.btn-primary(type='button')
                                a(href='/secret/lessons/emergencyLesson', style='all: unset') Take Test
                        if val === 'Neuro MRI Essentials Track'
                          .col-xs-12.col-sm-12.col-md-12.col-lg-12
                            img.center-block(src='images/neuroDoctor.jpg' style='width:70px;height:100px;margin-bottom:40px')
                          .row
                            .col-xs-5.col-xs-offset-1.col-sm-5.col-sm-offset-1.col-md-5.col-md-offset-1.col-lg-5.col-lg-offset-1
                              button.btn.btn-sm.btn-block.btn-success(type='button')
                                a(href='/secret/lessons/neuroLesson', style='all: unset') Resume Learning
                            .col-xs-5.col-sm-5.col-md-5.col-lg-5
                              button.btn.btn-sm.btn-block.btn-primary(type='button')
                                a(href='/secret/lessons/neuroLesson', style='all: unset') Take Test
