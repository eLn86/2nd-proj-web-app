block content
        
    .jumbotron
      h1.text-center Welcome !{name}!
      .row
        .col-xs-6.col-sm-6.col-md-4.col-lg-4
          // Chest X Ray Essentials Track
          .panel.price.panel-red
            .panel-heading.text-center
              .row
                .col-xs-12.col-sm-12.col-md-12.col-lg-12
                  h3 Chest X-Ray Essentials
              .row  
                .col-xs-12.col-sm-12.col-md-12.col-lg-12
                  img(src='/images/essentialsDoctor.jpg' style='width:70px;height:100px;text-align:center;border-radius:30px')
            .panel-body.text-center
              p.lead(style='font-size:40px')
                h4.trackOverview(style='font-family:Georgia') OVERVIEW
